<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".LoginFragment">

    <LinearLayout
        android:id="@+id/leftLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/contenedor"
        app:layout_constraintBottom_toBottomOf="@id/contenedor"
        app:layout_constraintStart_toStartOf="@id/contenedor"
        app:layout_constraintEnd_toStartOf="@id/rightLayout"
        app:layout_constraintWidth_percent="0.5">

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="@string/login"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:textSize="45sp"
            android:textColor="@color/theme"
            android:gravity="center"/>

        <EditText
            android:id="@+id/et_userName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginVertical="20dp"
            android:layout_gravity="center"
            android:autofillHints="admin"
            android:inputType="textPersonName"
            android:textColorHint="@color/theme"
            android:hint="@string/username"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:autofillHints="admin1234"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColorHint="@color/theme" />

        <Button
            android:id="@+id/bt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:textColor="@color/theme"
            android:backgroundTint="#499DBA"
            android:text="@string/launch"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/contenedor"
        app:layout_constraintBottom_toBottomOf="@id/contenedor"
        app:layout_constraintStart_toEndOf="@id/leftLayout"
        app:layout_constraintEnd_toEndOf="@id/contenedor"
        android:gravity="center"
        app:layout_constraintWidth_percent="0.4">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginVertical="40dp"
            android:contentDescription="@string/astro_lab_logo"
            android:src="@drawable/astro_lab" />

        <TextView
            android:id="@+id/textPowered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/powered_by"/>

        <ImageView
            android:id="@+id/iv_spacex"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:contentDescription="@string/logoSpacex"
            android:src="@drawable/spacex"
            android:layout_gravity="center"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>